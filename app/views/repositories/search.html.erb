<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @results %>
<ul>
  <% @results.each do |repos| %>
    <li><%= repos["name"] %><br>
        <%= link_to reps["html_url"], repos["html_url"] %><br>
        <%= repos["description"] %>
    </li>
  <% end %>
</ul>
<% end %>
